    private void btnClearEntryActionPerformed(java.awt.event.ActionEvent evt) {                                              
        // TODO add your handling code here:
        String ClearEntry = null;
        
        if(!lblOutput.getText().equals("ERROR") && lblOutput.getText().length() > 0){
            StringBuilder strB = new StringBuilder(lblOutput.getText());
            strB.deleteCharAt(lblOutput.getText().length() - 1);
            ClearEntry = strB.toString();
            lblOutput.setText(ClearEntry);
        }
    }                                             

    private void btnClearActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        lblOutput.setText("");
    }                                        

    private void btnDivideActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        firstnum = Double.parseDouble(lblOutput.getText());
        lblOutput.setText("");
        operations = "/";
    }                                         

